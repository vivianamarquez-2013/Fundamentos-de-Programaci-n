//// LIBRERIA 

int mayor(int a, int b, int c)
{
    int may;
    may=a;
    if(b>may)
    may=b;
    if(c>may)
    may=c;
    return may;
    
}

float cociente(int d, int e)
{
    float res;
    res=(float)d/(float)e;
    return res;
}

int sumatoria(int f)
{
      int res=0;
      for(int i=0;i<=f;i++)
      res=res+i;
      return res;
}
