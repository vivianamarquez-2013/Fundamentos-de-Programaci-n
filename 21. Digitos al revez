#include<iostream.h>
#include<conio.h>

main()
{
      int n, r=0, d;
      cout<<"Ingrese un n\xA3mero entero positivo que no sea m\xA3ltiplo de 10: ";
      cin>>n;
      if(n%10==0 | n<=0)
      {
                 cout<<"\nN\xA3mero no v\xA0lido.";
                 }
                 else
                 {
      do
			{
			d=n%10;
			r=r*10+d;
			n=n/10;
			}while(n>0);
			cout<<r;
                 }
                 getch();
          }
