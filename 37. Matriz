#include<iostream.h>
#include<conio.h>
#include<stdio.h>

main()
{
      system("color 1f");
      int M[3][4];
      for (int i=0;i<3;i++)
      for (int j=0;j<4;j++)
      {
          cout<<"Ingrese el valor de la poscici\xA2n "<<i<<" "<<j<<" : ";
          cin>>M[i][j];
          }
          system("cls");
          cout<<"La matriz ingresada es:\n\n";
          for (int i=0;i<3;i++)
          {
              for (int j=0;j<4;j++)
              cout<<" "<<M[i][j];
              cout<<"\n";
              }
              
getch();
}
