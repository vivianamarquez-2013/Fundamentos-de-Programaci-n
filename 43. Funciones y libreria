/// Milibreria.h

int factorial(int a)
{
    int res=1;
    for(int i=1;i<=a;i++)
    res=res*i;
    return res;
}

float potencia(float b, int e)
{
    float res=1;
    for(int i=1;i<=e;i++)
    res=res*b;
    return res;
}
 
